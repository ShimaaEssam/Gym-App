<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ScrollView01"
    tools:context=".user.DetailActivity">
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/activity_detail_id"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:layout_height="120dp"
            android:layout_width="match_parent"
            android:id="@+id/backdrop"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/service_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeTextType="uniform"
            android:text="Youga"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/mot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/service_title"
            android:layout_marginLeft="17dp"
            android:autoSizeTextType="uniform"
            android:text="YOUga Mot"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mot"
            android:autoSizeTextType="uniform"
            android:text="10"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/darkgrey"
            android:textSize="18sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/text"
            android:id="@+id/linear"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_shape"
            android:padding="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            >
            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Desc"
                android:autoSizeTextType="uniform"
                android:text="Fees:"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/fees"
                android:layout_width="match_parent"
                android:layout_below="@id/text"
                android:layout_height="wrap_content"
                android:autoSizeTextType="uniform"
                android:text="10 L.E"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fees"
                android:autoSizeTextType="uniform"
                android:text="You can pay with cash in the gym or by credit card"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:autoSizeTextType="uniform"
                android:text="To pay by credit card participate now.."
                android:layout_marginRight="8dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>
        <Button
            android:id="@+id/participate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_shape"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="5dp"
            android:text="participate now"
            android:layout_marginBottom="8dp"/>
        <ProgressBar
            android:layout_height="90dp"
            android:layout_width="100dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:id="@+id/progressBard"/>
    </LinearLayout>
</ScrollView>






